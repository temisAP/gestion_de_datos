@inproceedings{Marco2,
abstract = {A very significant challenge in planetary missions' design and operations is communications with ground control teams during critical events and highly risky maneuvers. These events include entry, descent, and landing (EDL) and orbit insertion, which should not be carried out in the blind – without at least downlink communications. Although vast planetary distances and long round-trip light times disallow real-time intervention from controllers, acquiring the relevant performance parameters in near realtime can be imperative for determining the corrective actions needed immediately following the critical event or, in the case of significant anomalies, aid in the diagnostic efforts. During several previous Mars missions landing events, and the Huygens probe landing on Titan, the communications strategy relied on proximity links to planetary orbiters, which then relayed the data to the Deep Space Network (DSN). A second back-up and parallel method was the successful attempts to receive the signal carrier directly at Earth, often using large radio telescopes when the wavelength was outside the DSN's reception bands. This Direct-to-Earth (DTE) method was only possible due to special techniques utilizing the DSN's open-loop receivers. In every case, picking up the signal during EDL was very challenging since the lander's link budget was designed for proximity relay via a local orbiter and not for distances across the solar system. Not all future missions can rely on the presence of preexisting orbiters at their planetary targets to relay their critical data and, furthermore, most missions would not likely have the resources to implement a reliable DTE link at acceptable data rates. A new method is introduced here that increases the chances of communications success. With the advent CubeSats, one or more of them can be launched with the primary mission, travel to the planetary target, be positioned to view the critical event, and carry out real-time relay of the data to the DSN at acceptale rates. CubeSats have flown in the Earth environment but not in deep space, so careful design as well as flight experience are needed. The relay function requires the possible development of new radios and antennas to meet challenging specifications due to the low mass, size, and power. After an initial technical demonstration of the concept and gaining operational experience, the cost can decrease as systems become more standardized and the reliability increases. This paper describes the invention of the “carry your own relay” concept and the formulation of a mission likely to be the first planetary CubeSat mission called Mars Cube One (MarCO). It also describes the operational concept of relay via small spacecraft and their significant role in reducing mission risk as well as overall mission cost.},
author = {Asmar, Sami and Matousek, Steve},
booktitle = {SpaceOps 2016 Conference},
doi = {10.2514/6.2016-2483},
file = {:C\:/Users/Andr{\'{e}}s/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Asmar, Matousek - 2016 - Mars cube one (MarCO) shifting the paradigm in relay deep space operations.pdf:pdf},
isbn = {9781624104268},
publisher = {American Institute of Aeronautics and Astronautics Inc, AIAA},
title = {{Mars cube one (MarCO) shifting the paradigm in relay deep space operations}},
url = {http://arc.aiaa.org},
year = {2016}
}
