issn = {21511535},
journal = {IEEE Journal of Selected Topics in Applied Earth Observations and Remote Sensing},
keywords = {Microwave radiometry,passive microwave remo-te sensing,radio frequency interference (RFI)},
pages = {1610--1624},
publisher = {Institute of Electrical and Electronics Engineers},
title = {{Real-Time Detection and Filtering of Radio Frequency Interference Onboard a Spaceborne Microwave Radiometer: The CubeRRT Mission}},
